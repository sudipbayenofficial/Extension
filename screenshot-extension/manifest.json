{
    "manifest_version": 3,
    "name": "OmniCapture Pro",
    "version": "2.0",
    "description": "Advanced screenshot tool with editing capabilities",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads",
        "storage",
        "clipboardWrite",
        "contextMenus",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "utils.js",
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "options_ui": {
        "page": "settings.html",
        "open_in_tab": true
    },
    "commands": {
        "capture-area": {
            "suggested_key": {
                "default": "Ctrl+Shift+A",
                "mac": "Command+Shift+A"
            },
            "description": "Select area to capture"
        },
        "capture-visible": {
            "suggested_key": {
                "default": "Ctrl+Shift+V",
                "mac": "Command+Shift+V"
            },
            "description": "Capture visible viewport"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "utils.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}